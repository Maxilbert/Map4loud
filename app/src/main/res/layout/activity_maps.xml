<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:roundbar="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoShadowHeight="100dp"
    sothree:umanoOverlay="true">

    <LinearLayout
        android:id="@+id/main"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">



        <!--<com.google.android.gms.maps.MapView-->
            <!--android:id="@+id/mapView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_weight="0.96"/>-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.97">
            <fragment class="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dip"
                android:id="@+id/mapView" />
            <Button
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="@drawable/task"
                android:id="@+id/btnTask"
                android:layout_marginBottom="5dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="start|bottom" />
            <Button
                android:layout_width="63dip"
                android:layout_height="63dip"
                android:background="@drawable/hearing1"
                android:id="@+id/btnMonitor"
                android:layout_marginLeft="89dip"
                android:layout_marginBottom="4dip"
                android:layout_gravity="start|bottom" />
            <Button
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="@drawable/meter1"
                android:id="@+id/btnRecord"
                android:layout_marginBottom="5dip"
                android:layout_gravity="center_horizontal|bottom" />
            <Button
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="@drawable/doctor1"
                android:id="@+id/btnDiagnosis"
                android:layout_marginRight="89dip"
                android:layout_marginBottom="5dip"
                android:layout_gravity="end|bottom"/>
            <Button
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:background="@drawable/unlock"
                android:id="@+id/btnUnlock"
                android:layout_marginBottom="5dip"
                android:layout_marginRight="5dip"
                android:layout_gravity="end|bottom" />



            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:clickable="false"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/shadow"
                android:layout_gravity="left|top" />
            <Button
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/profile"
                android:id="@+id/btnProfile"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_gravity="left|top"/>
            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:clickable="false"
                android:layout_marginTop="69sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/shadow"
                android:layout_gravity="left|top" />
            <Button
                android:layout_width="30dip"
                android:layout_height="28dip"
                android:background="@drawable/community"
                android:id="@+id/btnFriends"
                android:layout_marginTop="80sp"
                android:layout_marginLeft="20sp"
                android:layout_gravity="left|top" />
            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:clickable="false"
                android:layout_marginTop="118sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/shadow"
                android:layout_gravity="left|top" />
            <Button
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:background="@drawable/setting1"
                android:layout_marginTop="127sp"
                android:layout_marginLeft="19sp"
                android:id="@+id/btnSetting"
                android:layout_gravity="left|top" />
            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:clickable="false"
                android:layout_marginTop="167sp"
                android:layout_marginLeft="10sp"
                android:background="@drawable/shadow"
                android:layout_gravity="left|top" />
            <Button
                android:layout_width="26sp"
                android:layout_height="26sp"
                android:background="@drawable/question"
                android:layout_marginTop="179sp"
                android:layout_marginLeft="22sp"
                android:id="@+id/btnQuestion"
                android:layout_gravity="left|top" />


            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:clickable="false"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/shadow"
                android:layout_gravity="right|top" />
            <Button
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:layout_marginTop="31sp"
                android:layout_marginRight="21sp"
                android:background="@drawable/location"
                android:id="@+id/btnLocation"
                android:layout_gravity="right|top" />
            <Button
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:clickable="false"
                android:layout_marginTop="69sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/shadow"
                android:layout_gravity="right|top" />
            <Button
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:background="@drawable/layers"
                android:layout_marginTop="79sp"
                android:layout_marginRight="20sp"
                android:id="@+id/btnLayer"
                android:layout_gravity="right|top" />



        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88f2f2f2"
        android:weightSum="1">

        <Button
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:id="@+id/btnCollapse"
            android:background="@drawable/arrow_down_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:text="0 dBA"
            android:textColor="#000000"
            android:textSize="37sp"
            android:textStyle="bold"
            android:id="@+id/decibelView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textColor="#000000"
            android:text="Provide a quit slient service to monitor your acoutic exposure no matter where you go and when it is. Find your own peace with a simple click on below button named START MONITOR MODE and it will not disturb you."
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/monitoringView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:text="Start Monitor Mode"
            android:id="@+id/btnStartMonitor"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:layout_marginTop="-50sp"
            android:text="Stop Monitor Mode"
            android:id="@+id/btnStopMonitor"/>

        <edu.njit.map4noise.views.RoundProgressBar
            android:id="@+id/roundProgressBar"
            android:visibility="visible"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_alignLeft="@+id/roundProgressBar1"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="-118sp"
            roundbar:roundColor="#00f2f2f2"
            roundbar:roundProgressColor="#454545"
            roundbar:textColor="#454545"
            roundbar:roundWidth="15dip"
            roundbar:textSize="18sp"/>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>